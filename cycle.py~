#счетчик числа заявок за день, что б не надоедало
d = input("введи дату в форматі ’день.число.рік’ > ")
q = int(input("скільки %s було заявок по витокам ? > " % d))
j = 0

while j <= q:           
    if j < q:
        for i in range(1, 3):
            a.append(input("%s" % (b[i-1])))
        ws.append(a)
        a = []    
        j += 1
    elif j == q:
        print ("якщо хочеш закінчити ввід натисни ’т’")
        #print ("вести нову дату - тисни 2")
        print ("продовжити - тисни будь що")
        n = input("> ")
        print ("yhoho!!")
        if n == 'т':
            wb.save('fun.xlsx')
            j = q + 1
            print("fuck!")
        else:
            j = 0
        
                
    
 

